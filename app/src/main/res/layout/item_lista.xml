<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plantilla_card"



    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"


    card_view:cardBackgroundColor="#9FE1A9D8"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="2dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:layout_margin="3dp"
        android:background="#FFFFFF"

        >

        <ImageView
            android:id="@+id/imagenC"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/tituloC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imagenC"
            android:layout_toRightOf="@id/imagenC"
            android:text="Titulo"
            android:textColor="@color/color_principal"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descripC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tituloC"
            android:layout_toEndOf="@id/imagenC"
            android:layout_toRightOf="@id/imagenC"
            android:text="DescripciÃ³n"
            android:textColor="@color/black"
            android:textSize="14sp"



            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
